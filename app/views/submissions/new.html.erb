  <!-- Form for creating submissions-->
<h1 style="text-align:center">Submit Assignment</h1>
<div class="container">
  <div id="subm-create-content">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :submission, url: submissions_path do |f| %>
         <p>
            <%= f.label :name %><br>
            <%= f.text_field :name, id:"name", class: 'form-control', :required => true %>
          </p>
          
          <p>
          
            <%= f.label :course_number %><br>
            <%= f.collection_select :course_num, @courses.select(:number).distinct, :number, :number,{  prompt: "Select a Course Number"}, {id:"course_num", class: "form-control", :required => true} %>
          
           <%= f.label :assignment %><br>
            <% if @assignments != nil %>

            <%= f.collection_select :assignment, @assignments, :name, :name,{  prompt: true}, {id:"assignment_name", class: 'form-control', :required => true} %>
            <% else %>
              <p> Assignment not available for submission, check with your instructor.  </p>
            <% end %>
          </p>
          
          <p>
            <%= f.label :attachment %>
            <%= f.file_field :attachment, id:"submission", class:"form-control", :required => true%>
          </p>
        
          <p>
            <%= f.submit 'submit', id:"submit",class: "btn btn-primary" %>
          </p>
          <div style="text-align:center">  
            <%= link_to 'Back', :back %> &emsp;
            <%= link_to 'Home', root_path %> 
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
