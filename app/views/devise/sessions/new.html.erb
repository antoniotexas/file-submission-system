<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <% if "#{registration_path(resource_name)}" == "/instructors" %>
      <h4><%= t('.sign_in ', default: "Sign in as Instructor") %></h4>
    <% elsif "#{registration_path(resource_name)}" == "/student" %> 
      <h4><%= t('.sign_in ', default: "Sign in as Student") %></h4>
    <% elsif "#{registration_path(resource_name)}" == "/assistants" %> 
      <h4><%= t('.sign_in ', default: "Sign in as Teacher Assistant") %></h4>
    <% end %>

  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, id:"email", autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, id:"password", autocomplete: 'off', class: 'form-control' %>
      </div>

      
      <% if false %>
       #This is for the remember me field. looks a bit weird right now
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
          <% end %>
        </div>
      <% end %>
      <% end %>
      <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-primary', id:"signin" %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
