<h2> NEW ASSISTANT </h2>

<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :assistant, url: "/assistant" do |f| %>
          <p>
            <%= f.label :first_name %>
            <%= f.text_field :first_name, id:"first_name", class: 'form-control', :required => true%>
          </p>
        
          <p>
            <%= f.label :last_name %>
            <%= f.text_field :last_name, id:"last_name", class: 'form-control', :required => true%>
          </p>

          <p>
            <%= f.label :email %>
            <%= f.text_field :email, id:"email", class: 'form-control', :required => true%>
          </p>

          <p>
            <%= f.label :course_num %><br>
            <%= f.collection_select :course_num, @courses, :number, :number, id:"course_num", prompt: true, include_blank: false %>
          </p>
 
          <p>
            <%= f.submit 'submit', :id=>"submit", class: "btn btn-primary" %>
          </p>
          
          <div style="text-align:center">
            <p>  
              <%= link_to 'Home', root_path %>
            </p>
          </div>
        <% end %>
    </div>
  </div>
</div>



