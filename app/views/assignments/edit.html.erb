 
<!-- Form for editing existing assignments-->

<div id="assign-edit-content">
  <div style="text-align:center;">
    <h1>Edit assignment</h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :assignment, url: assignment_path(@assignment), method: :patch do |f| %>
       
        <% if @assignment.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@assignment.errors.count, "error") %> prohibited
              this assignment from being saved:
            </h2>
            <ul>
              <% @assignment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
       
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name, id:"name", class: 'form-control' %>
        </p>
        
        <p>
          <%= f.label :attachment %> 
          <% if @assignment.attachment_url != nil %>
            <p> >> Current Attachment: <b><%= @assignment.attachment_url.split('/').last %></b></p>
          <% end %>
          <%= f.file_field :attachment, class: 'form-control' %> 
        </p>
       
        <p>
          <%= f.label :due_date %><br>
          <%= datetime_local_field(:assignment, :due_date, id:"due_date", class: 'form-control') %>
        </p>
       
        <p>
          <%= f.submit 'submit', id:"submit", class: "btn btn-primary" %>
        </p>
       
      <% end %>
    </div>
  </div>
  
  <div style="text-align:center;">
    <%= link_to 'Back', :back %> &emsp;
    <%= link_to 'Delete' %>
  </div>
</div>
