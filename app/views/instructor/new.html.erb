<div style="text-align:center;">
  <h1> <b>Create New Instructor </b></h1>
</div>

<div class="container">
  <div id="course-create-content">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <%= form_for :instructor, url: "/instructor" do |f| %>

          <p>
            <%= f.label :first_name %><br>
            <%= f.text_field :first_name, id:"first_name", class: 'form-control', value: "",:required => true %>
          </p>

          <p>
            <%= f.label :last_name %><br>
            <%= f.text_field :last_name, id:"last_name", class: 'form-control', value: "",:required => true %>
          </p>

          <p>
            <%= f.label :email %><br>
            <%= f.text_field :email, id:"email", class: 'form-control', value: "",:required => true %>
          </p>
          
          <p>
            <%= f.submit 'submit', id:"submit", class: "btn btn-primary" %>
          </p>

          <div style="text-align:center;">
            <p>  <%= link_to 'Home', root_path %> </p>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
